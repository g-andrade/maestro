% vim: set ft=erlang expandtab softtabstop=4 shiftwidth=4:

{erl_opts, [
        %debug_info
        warn_export_all,
        warn_export_vars,
        %warn_missing_spec,
        warn_obsolete_guard,
        warn_shadow_vars,
        warn_unused_import
        ]}.

{lib_dirs, ["deps"]}.

{deps, [
        %{edown, ".*", {git, "git://github.com/esl/edown.git", {tag, "0.4"}}},
        {poolboy, ".*", {git, "git@github.com:devinus/poolboy.git", {tag, "1.5.1"}}}
        ]}.

{edoc_opts, [
        %[{doclet, edown_doclet}]
        ]}.

{plugins, [
        ]}.

{xref_checks, [
        undefined_function_calls,
        undefined_functions,
        locals_not_used,
        exports_not_used,
        deprecated_function_calls,
        deprecated_functions
        ]}.

{eunit_opts, [verbose, {skip_deps, true}]}.
{eunit_exclude_deps, true}.
{cover_enabled, true}.
